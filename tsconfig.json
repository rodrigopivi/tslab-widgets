{
  "compileOnSave": true,
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "rootDir": "src",
    "sourceMap": false,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "commonjs",
    "outDir": "./dist",
    "types": [
      "node"
    ],
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "tslab-widgets": [
        "src/index.ts"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ],
    "swc": true
  }
}